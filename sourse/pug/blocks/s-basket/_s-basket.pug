mixin s-basket()
	// start s-basket
	+b.s-basket#s-basket&attributes(attributes)
		.container
			.form-wrap
				.row
					.col-lg-9.col-xxl-8
						mixin basketItem(sale)
							+e.basketItem
								.table-wrap
									table
										tr
											td
												+e.product(href="#")
													+e.imgWrap
														img.res-i.lazy(src="#" data-src="img/@1x/basket.jpg", alt="")
													p КРЕМОВЫЙ БУКЕТ "ШОКОЛАДНЫЙ МИШКА"
											td 
												+e.size L (45 см)
											td 
												+e.quantity
													+e.BUTTON.minus(type="button")
													input(type="numb" value="2")
													+e.BUTTON.plus(type="button")
											td 
												+e.price
													span Цена
													if sale
														+e.sale 
															+e.oldPrice 13 300 р.
															span.text-primary скидка 1 000
													.h5 12 300 р.
											td 
												+e.price--total
													span Сумма
													.h5 24 600 р.
											td 
												+e.BUTTON.cancel(type="button")
						+basketItem('sale')
						+basketItem()
						+basketItem()
				+b.sliderBlock
					.h3 Дополните букет подарком
					+sCatalog-checkout()
				.row
					.col-md-7.col-xl-5
						+form-wrap
							<div class="input-group mb-3">
								<input type="text" class="form-control" placeholder="Купон на скидку" aria-label="Купон на скидку" aria-describedby="button-addon3">
								<button class="btn btn-accent" type="button" id="button-addon3">
									span.d-none.d-sm-block Применить
									span.d-sm-none ОК
								</button>
							</div>
					.col
						+e.order(type="submit") Оформить заказ
							img.ml-3(src="img/svg/arrow-lg-right.svg", alt="")

	// end s-basket